<div class="side-bar-header">
  <div class="header_name">
    <%= link_to current_user.name,"/users/#{current_user.id}/edit" %>
  </div>
  <div class="create_room">
    <%= link_to 'チャットを作成する',new_room_path %> 
    <%# edit_user_path(current_user)でもあり %>
  </div>
</div>

<div class="rooms">
  <% current_user.rooms.each do |room|%>
    <div class="room">
      <div class="room-name">
          <%# <a href= "/rooms/room_id/messages"><%= room.name%></a>  
          <%= link_to room.name, room_messages_path(room) %>
          <%# # パスにroomを引数と取ることで、メッセージと紐付いているチャットルームのidをもたせることができる %>
      </div>
    </div>
  <% end %>
</div>